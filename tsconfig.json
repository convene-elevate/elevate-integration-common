{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "lib": [
      "ES6"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
